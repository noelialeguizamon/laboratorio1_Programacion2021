#include <stdio.h>
#include <stdlib.h>

int main() {

	setbuf(stdout, NULL); 	//sirve para limpiar el buffer del teclado.
							//para que no traiga basura

	printf ("!!!Esta es la primera clase!!!"); /* prints !!!Hello World!!! */
	int numero;
	int suma;

	printf("\n ingrese un numero: \n");
	scanf("%d", &numero);

	suma=numero+numero;

	printf("\n la suma es %d",suma);



	return 0;
}
