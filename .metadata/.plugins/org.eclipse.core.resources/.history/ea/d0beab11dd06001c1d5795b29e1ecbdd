#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	setbuf(stdout, NULL);
	char resp;
	do {
		printf("continuar? s/n: \n");
		fflush(stdin);
		scanf("%c", &resp);

	}
				//	puts("!!!Hello World!!!"); /* prints !!!Hello World!!! */



	return 0;

}
